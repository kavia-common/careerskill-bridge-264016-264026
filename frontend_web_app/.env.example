# Frontend environment variables for SkillBridge LMS (React)
# Do NOT commit .env with secrets. This is an example file.

# Backend REST base URL (preferred)
REACT_APP_API_BASE=http://localhost:3001
# Optional alternative var name supported
REACT_APP_BACKEND_URL=http://localhost:3001

# WebSocket base URL
REACT_APP_WS_URL=ws://localhost:3001/ws

# Frontend site URL (for redirects, if needed)
REACT_APP_FRONTEND_URL=http://localhost:3000

# Build/runtime toggles
REACT_APP_NODE_ENV=development
REACT_APP_NEXT_TELEMETRY_DISABLED=1
REACT_APP_ENABLE_SOURCE_MAPS=true
REACT_APP_PORT=3000
REACT_APP_TRUST_PROXY=false
REACT_APP_LOG_LEVEL=info
REACT_APP_HEALTHCHECK_PATH=/healthz

# Feature flags: can be JSON or comma-separated keys, e.g. {"newDashboard":true} or newDashboard,mentorship
REACT_APP_FEATURE_FLAGS={"mentorship":true,"jobTools":true}

# Experiments toggle
REACT_APP_EXPERIMENTS_ENABLED=false
